{
  "version": 0,
  "name":    "p_image_zmq_1",
  "runtime": "python",

  "graph": ["(ImageReadFile ImageWriteZMQ ImageOutput)"],

  "elements": [
    { "name":   "ImageReadFile",
      "parameters": {
         "data_sources": "(file://data_in/in_{}.jpeg)",
         "data_batch_size": 1
      },
      "input":  [{"name": "paths",  "type": "[Path]"}],
      "output": [{"name": "images", "type": "[image]"}],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.image_io"}
      }
    },
    { "name":   "ImageWriteZMQ",
      "parameters": {"data_targets": "(zmq://localhost:5000)"},
      "input":  [{"name": "images", "type": "[image]"}],
      "output": [],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.image_io"}
      }
    },
    { "name":   "ImageOutput",
      "input":  [{"name": "images", "type": "[image]"}],
      "output": [{"name": "images", "type": "[image]"}],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.image_io"}
      }
    }
  ]
}
